generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Shop {
  id          String   @id
  shopUrl     String   @unique
  accessToken String?  // Optional because sometimes we might just want to track the shop
  isActive      Boolean  @default(false)
  autoNegotiation Boolean @default(true)
  maxRounds     Int      @default(3)
  strategy      String   @default("moderate") // 'aggressive', 'moderate', 'conciliatory'
  allowSaleItems Boolean @default(false)
  priceRounding Float    @default(0.85)
  botWelcomeMsg String   @default("Bonjour ! ðŸ‘‹ Je peux vous faire une remise si vous me proposez un prix raisonnable. Quel est votre prix ?")
  botRejectMsg  String   @default("C'est un peu juste... Je peux vous le faire Ã  {price} â‚¬.")
  botSuccessMsg String   @default("C'est d'accord pour {price}â‚¬ ! ðŸŽ‰")
  widgetColor   String   @default("#000000")
  widgetTitle   String   @default("Chat with us")
  chatTheme     String   @default("modern")
  botIcon       String?
  // Email Customization
  emailFont           String   @default("Arial, sans-serif")
  emailPrimaryColor   String   @default("#008060")
  emailAcceptedSubject String  @default("Your offer has been accepted! ðŸŽ‰")
  emailAcceptedBody    String  @default("<h2>Congratulations! Your offer has been accepted.</h2><p>You successfully negotiated for the product: <strong>{productTitle}</strong>.</p><p>Here is your unique discount code:</p><h1 style='color: {color};'>{code}</h1><p><strong>Attention:</strong> This code is valid only until: {endsAt}.</p>")
  emailRejectedSubject String  @default("Update on your offer")
  emailRejectedBody    String  @default("<h2>Regarding your offer for {productTitle}</h2><p>We have reviewed your proposal, but unfortunately we cannot accept it at this time.</p><p>Feel free to <a href='{productUrl}'>visit our shop</a> to make a different offer.</p>")
  emailCounterSubject  String  @default("Counter-offer for your request")
  emailCounterBody     String  @default("<h2>New proposal for {productTitle}</h2><p>Your initial offer was a bit low, but we want to find a deal.</p><p>We can offer you this product for the exceptional price of:</p><h1 style='color: blue;'>{newPrice} â‚¬</h1><p><strong>Accept this offer:</strong> Use code <strong style='color: green;'>{code}</strong> at checkout.</p><p>(Valid until {endsAt})</p>")

  enableExitIntent    Boolean @default(true)
  enableInactivityTrigger Boolean @default(true)
  fulfillmentMode String   @default("DISCOUNT_CODE") // 'DISCOUNT_CODE' or 'DRAFT_ORDER'
  widgetTemplate String    @default("classic") // 'classic', 'modern', 'popup'
  rules         Rule[]
  offers      Offer[]
  gmailUser     String?
  gmailAppPassword String?
  smtpHost      String?
  smtpPort      Int      @default(587)
  autoValidityDuration Int @default(24) // Hours
  manualValidityDuration Int @default(72) // Hours
  reactionMessages String? // JSON string for customized negotiation reactions
  
  // Billing & Usage
  plan             String   @default("FREE") // FREE, PRO, ELITE
  negotiationCount Int      @default(0)
  lastResetDate    DateTime @default(now())

  createdAt   DateTime @default(now())
}

model Rule {
  id             String   @id @default(uuid())
  shopId         String
  shop           Shop     @relation(fields: [shopId], references: [id])
  collectionId   String?  // If null, it's a global rule
  productId      String?  // If defined, overrides collection/global
  minDiscount    Float    // e.g., 0.80 for 20% off max
  minPrice       Float?   // Specific minimum accepted price override
  isEnabled      Boolean  @default(true)
  createdAt      DateTime @default(now())
  
  @@index([shopId, productId])
  @@index([shopId, collectionId])
}

model Offer {
  id            String   @id @default(uuid())
  shopId        String
  shop          Shop     @relation(fields: [shopId], references: [id])
  customerEmail String?
  sessionId     String?  // New: For rate limiting anonymous users
  offeredPrice  Float
  status        String   // ACCEPTED, REJECTED, COUNTER_OFFER
  code          String?  // Generated discount code if accepted
  productTitle  String?
  productId     String?
  originalPrice Float?
  isConverted   Boolean  @default(false)
  convertedAt   DateTime?
  orderId       String?
  createdAt     DateTime @default(now())
  counterPrice  Float?

  @@index([sessionId])
  @@index([code])
  @@index([shopId])
}
