generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Shop {
  id          String   @id
  shopUrl     String   @unique
  accessToken String?  // Optional because sometimes we might just want to track the shop
  isActive      Boolean  @default(false)
  maxRounds     Int      @default(3)
  strategy      String   @default("moderate") // 'aggressive', 'moderate', 'conciliatory'
  allowSaleItems Boolean @default(true)
  priceRounding Float    @default(0.85)
  botWelcomeMsg String   @default("Bonjour ! ðŸ‘‹ Je peux vous faire une remise si vous me proposez un prix raisonnable. Quel est votre prix ?")
  botRejectMsg  String   @default("C'est un peu juste... Je peux vous le faire Ã  {price} â‚¬.")
  botSuccessMsg String   @default("C'est d'accord pour {price}â‚¬ ! ðŸŽ‰")
  widgetColor   String   @default("#000000")
  botIcon       String?
  enableExitIntent Boolean @default(false)
  rules         Rule[]
  offers      Offer[]
  createdAt   DateTime @default(now())
}

model Rule {
  id             String   @id @default(uuid())
  shopId         String
  shop           Shop     @relation(fields: [shopId], references: [id])
  collectionId   String?  // If null, it's a global rule
  productId      String?  // If defined, overrides collection/global
  minDiscount    Float    // e.g., 0.80 for 20% off max
  minPrice       Float?   // Specific minimum accepted price override
  isEnabled      Boolean  @default(true)
  createdAt      DateTime @default(now())
}

model Offer {
  id            String   @id @default(uuid())
  shopId        String
  shop          Shop     @relation(fields: [shopId], references: [id])
  customerEmail String?
  sessionId     String?  // New: For rate limiting anonymous users
  offeredPrice  Float
  status        String   // ACCEPTED, REJECTED, COUNTER_OFFER
  code          String?  // Generated discount code if accepted
  productTitle  String?
  productId     String?
  originalPrice Float?
  createdAt     DateTime @default(now())
}
